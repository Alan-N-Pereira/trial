{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "jsx": "react",
        "strict": true,
        "pretty": true,
        "outDir": "dist",
        /* Additional Checks */
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "baseUrl": "./",
        "types": ["node","dotenv"],
        "sourceMap": true, 
        "skipLibCheck": true,
        "paths": {
            "spoken": ["spoken/src"]
        }
    },
    "exclude": [
        "node_modules",
        "test",
        "release"
    ],
    "include": [
        "src/**/*",
        "spoken/**/*",
        "src/global.d.ts"  // Include the global type declaration file
    ]
}